<?xml version="1.0" encoding="utf-8"?>

<launch>
  <!-- Realsense D435i -->
  <include file="$(find realsense2_camera)/launch/rs_rgbd.launch">
    <arg name="enable_pointcloud" value="true"/>
    <arg name="depth_width" value="640"/> <!-- 낮춘 해상도 -->
    <arg name="depth_height" value="480"/> <!-- 낮춘 해상도 -->
    <arg name="depth_fps" value="15"/> <!-- 낮춘 프레임 속도 -->
    <arg name="color_width" value="640"/> <!-- 낮춘 해상도 -->
    <arg name="color_height" value="480"/> <!-- 낮춘 해상도 -->
    <arg name="color_fps" value="15"/> <!-- 낮춘 프레임 속도 -->
    <param name="queue_size" value="10"/> <!-- 큐 크기 조정 -->
  </include>

  <!-- Console launch prefix -->
  <arg name="launch_prefix" default=""/>

  <!-- Depth Combination -->
  <node pkg="depth_v8" type="depth_combination.py" name="depth_combination" output="screen" />

  <!-- Static TF -->
  <node pkg="tf" type="static_transform_publisher" name="camera_link_to_camera_color_optical_frame"
    args="0 0.02375 0 -1.57 0 -1.57 /camera_link /camera_color_optical_frame 100" />

   <!-- RVIZ -->
  <node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find depth_v8)/rviz/test.rviz" />
</launch>
